<div class="container-fluid my-3 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-6 col-lg-6">

      <div>
        <div class="mb-5 p-0">
          <h2>Forgot your password?</h2>
        </div>

        <div class="mb-5 p-0">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0" %>
            </div>

            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: "btn btn-success w-100 rounded-0" %>
            </div>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
