<div class="container-fluid my-3 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <div>
        <div class="mb-5 p-0">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
        </div>

        <div class="mb-5 p-0">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0", aria: {describedby: "passwordHelpBlock"} %>
              <% if @minimum_password_length %>
                <small id="passwordHelpBlock" class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
            </div>

            <div class="field form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control rounded-0" %>
            </div>

            <div class="actions form-group">
              <%= f.submit "Update", class: "btn btn-success rounded-0 w-100" %>
            </div>
          <% end %>
        </div>

        <!--
          <div class="border border-danger px-3 py-3 mb-5">
            <div class="mb-3 p-0">
              <h3>Cancel my account</h3>
            </div>

            <div class="mb-3 p-0">
              <%# button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100 rounded-0" %>
            </div>
          </div>
          -->

        <%= link_to "Back", dashboard_path %>
      </div>

    </div>
  </div>
</div>
