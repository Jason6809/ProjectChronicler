<div class="container-fluid my-3 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <div>
        <div class="mb-5 p-0">
          <h2>Sign up</h2>
        </div>

        <div class="mb-5 p-0">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0" %>
            </div>

            <div class="field form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
            </div>

            <div class="actions form-group">
              <%= f.submit "Sign up", class: "btn btn-success w-100 rounded-0" %>
            </div>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
